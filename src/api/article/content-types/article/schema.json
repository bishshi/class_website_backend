{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "isTop": {
      "type": "boolean",
      "default": false
    },
    "summary": {
      "type": "text"
    },
    "content": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultMarkdown"
      }
    },
    "cover": {
      "type": "string",
      "required": false
    },
    "category": {
      "type": "enumeration",
      "required": true,
      "default": "Event",
      "enum": [
        "Teacher",
        "Student",
        "Event",
        "SpecialEvent"
      ]
    }
  }
}
